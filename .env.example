GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/firebase.json
# Option 2: raw JSON string
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

FIRESTORE_REELS_COLLECTION=sources_reels
